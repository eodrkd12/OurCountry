<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorMdGrey_200"
    tools:context=".IntroActivity.SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintTop_toTopOf="parent"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorMdWhite_1000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_setting">

        <TextView
            android:id="@+id/text_alarmsetting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="알림설정"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="115dp" />

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/text_alarmsetting"
            app:layout_constraintEnd_toEndOf="@+id/text_alarmsetting"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baselien_arrow_grey_24" />

        <ImageView
            android:id="@+id/imageView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/text_camerasetting"
            app:layout_constraintEnd_toEndOf="@+id/text_camerasetting"
            app:layout_constraintTop_toTopOf="@+id/text_camerasetting"
            app:srcCompat="@drawable/baselien_arrow_grey_24" />

        <TextView
            android:id="@+id/text_camerasetting"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="카메라"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/text_alarmsetting"
            tools:layout_editor_absoluteX="115dp" />

        <TextView
            android:id="@+id/text_logout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="로그아웃"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_camerasetting" />

        <TextView
            android:id="@+id/text_deleteaccount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="계정삭제"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/text_logout"
            tools:layout_editor_absoluteX="115dp" />

        <View
            android:id="@+id/view6"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="48dp"
            android:background="@color/colorMdGrey_200"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-74dp" />

        <View
            android:id="@+id/view7"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="96dp"
            android:background="@color/colorMdGrey_200"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-74dp" />

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="144dp"
            android:background="@color/colorMdGrey_200"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-74dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_camerasetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorMdWhite_1000"
        app:layout_constraintTop_toBottomOf="@+id/layout_account">


        <TextView
            android:id="@+id/text_imagecachesize"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="이미지 캐시 크기"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="@id/layout_camerasetting"
            tools:layout_editor_absoluteX="115dp" />

        <TextView
            android:id="@+id/text_deleteimagecache"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="이미지 캐시 지우기"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/text_imagecachesize" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_appinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@color/colorMdWhite_1000"
        app:layout_constraintTop_toBottomOf="@+id/layout_camerasetting">

        <TextView
            android:id="@+id/text_appinfo"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="앱 정보"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_appversion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="앱 버전"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/text_appinfo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>